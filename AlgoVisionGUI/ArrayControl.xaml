<UserControl x:Class="AlgoVisionGUI.ArrayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AlgoVisionGUI"
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="Root">
        <oxy:Plot DefaultTrackerTemplate="{x:Null}">
            <oxy:Plot.Axes>
                <oxy:CategoryAxis GapWidth="0.2"
                                  MaxWidth="5.0"
                                  IsAxisVisible="False"
                                  IsZoomEnabled="False"
                                  IsPanEnabled="False"/>
                <oxy:LinearAxis Position="Left"
                                IsAxisVisible="False"
                                IsZoomEnabled="False"
                                IsPanEnabled="False"                                
                                MaxHeight="100"/>
            </oxy:Plot.Axes>
            <oxy:Plot.Series>
                <oxy:ColumnSeries 
                    ItemsSource="{Binding Array, UpdateSourceTrigger=PropertyChanged}"/>
            </oxy:Plot.Series>
        </oxy:Plot>        
    </Grid>
</UserControl>